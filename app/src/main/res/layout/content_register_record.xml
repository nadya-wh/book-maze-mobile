<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RegisterRecordActivity"
    tools:showIn="@layout/activity_register_record">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="36dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/book_image"
        android:layout_marginStart="38dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/book_image"
        android:text="TextView"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name_text_view"
        android:layout_below="@id/name_text_view"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/reserve_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/author_text_view"
        android:layout_below="@+id/author_text_view"
        android:layout_marginTop="22dp"
        android:textSize="24dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/return_deadline_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/reserve_date_text_view"
        android:layout_below="@+id/reserve_date_text_view"
        android:layout_marginTop="22dp"
        android:textSize="24dp"
        android:text="TextView" />

    <CheckBox
        android:text="Was returned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/return_deadline_text_view"
        android:layout_alignEnd="@+id/return_deadline_text_view"
        android:layout_marginTop="22dp"
        android:id="@+id/was_returned_checkbox"
        android:textSize="24dp"
        android:clickable="false" />


</RelativeLayout>
